    <main class="back-img ">


        <div class="container ">
            <h3 class="display-5 text-center" style="padding: 20px;">PROFILE</h3>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 border-end">
                            <form class="text-center">
                                <div class="row" style="padding-top: 12%;">
                                    <div class="form-group" style="padding-left:38%;">
                                        <div id="avatar" style="
                                                border-radius: 50%;
                                                width: 100px;
                                                height: 100px;
                                                line-height: 100px;
                                                text-align: center;
                                                font-size: 36px;
                                                background-color: #FF8A00;
                                                color: white;">JD</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <input type="text" class="form-control text-center" id="name" value=<%= user.user_name %>
                                            readonly>
                                    </div>
                                </div>
                                <div class="row" style="padding-top: 10%;">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="avatarBgColor">Background Color</label>
                                            <div class="row" style="padding-left: 30%;padding-right: 30%;">
                                                <input type="color" class="form-control bar" id="avatarBgColor">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">

                                        <div class="form-group">
                                            <label for="avatarTextColor">Text Color</label>
                                            <div class="row" style="padding-left: 30%;padding-right: 30%;">
                                                <input type="color" class="form-control bar" id="avatarTextColor">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-8">
                            <form action="/student/profile" method="post"  id="myForm"  style="padding: 5%;">
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-4 col-form-label">Email address</label>
                                    <div class="col-sm-8">
                                        <input type="email" class="form-control" id="email" value=<%= user.user_email %>
                                            readonly required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="preferred_language" class="col-sm-4 col-form-label">Preferred Language</label>
                                    <div class="col-sm-8">
                                        <select id="preferred_language"name='preferred_language' class='form-select'>
                                            <option selected value='<%- data2[0].preferred_language %>'><%- data2[0].preferred_language %></option>
                                            <% for (let i = 0; i < data0.length; i++){ %>
                                            <option value="<%= data0[i].type_value %>"><%= data0[i].type_value %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="school_name" class="col-sm-4 col-form-label">School</label>
                                    <div class="col-sm-8">
                                        <select id="school_name" name='school_name' class='form-select' >
                                            <option selected value='<%- data2[0].school_name %>'><%- data2[0].school_name %></option>
                                            <% for (let i = 0; i < data1.length; i++){ %>
                                            <option value="<%- data1[i].type_value %>"><%- data1[i].type_value %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div style="padding-top:5%;padding-left:45%;">
                                    <button type="button" id='edit' class='btn' style="background-color: #E7E2DA;">Edit</button>
                                    <button type='submit' id='save' class='btn btn-success d-none'>Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="featurette-divider" style="margin-bottom:0;">

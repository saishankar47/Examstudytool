<!DOCTYPE html>
<html lang="en">
    <%- include('t_head.ejs') %>
    <%- include('a_header.ejs') %>
   
<body>


<script>
    $(document).ready(function () {
     
         $('#example1').dataTable({
            order: [[0, 'asc']],
        });
        
    });
</script>
<div class="row">
    <div class="col">
        <div class="col">
            <a href="/admin/viewtask/<%=class_id%>?class_name=<%=class_name%>" >  <button class="btn btn-dark"; type="button" >
              <i class="fa fa-arrow-left"> </i>
            </button>
            </a>
        </div>
            <div class="col-12"><h4 style="text-align: center;">"<%=test_name%>" Analytics</h4></div>
    </div>
</div>
  <style>
    hr.dotted {
      border-top: 3px dotted #bbb;
    }
</style>  
<hr class="dotted"> 
  <br><br>

    <div class="container-xl">
    <div class="row">
        <div class="col shadow p-3 mb-5 bg-white rounded">
          
        
          <br>
          <!-- Table -->
          <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="display" id="example1"  style="width:100%">
          
                        <thead>
                              <tr>
                                  <th>Student Name</th>
                                  <th>Date Assigned</th>
                                  <th>Due Date</th>
                                  <th>Score</th>
                                  <th>Percentage</th>
                                 
                              </tr>
                          </thead>
                          
                          <tbody>
                            <% for (let i=0; i < data0.length; i++){ %>
                            <tr>
                              <td><%=data0[i].user_name%></td>
                              <td><%=data0[i].created_date%></td>
                              <td><%=data0[i].due_date%></td>
                                 <% if(data0[i].score!=null){ %>
                              <td><%=data0[i].score%></td>
                                <%}else{%>
                                <td>Not Attempted</td>
                                <%}%>
                              <td><%=data0[i].percentage%></td>
                             
                            </tr>
                            <% } %>
                          </tbody>
                          
                      
                  </table>
              </div>
            </div>
           </div>
           <!-- Table -->
        </div>
    </div>
    </div>




 
   
    <br><br><br>
    <div style="flex-grow:1"></div>
    <%- include('a_footer.ejs') %>
</body>



</html>